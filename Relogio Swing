import javax.swing.*;
import java.awt.*;
import java.text.SimpleDateFormat;
import java.util.Date;

public class RelogioSwing extends JFrame {

    private JLabel labelDataHora;
    private SimpleDateFormat formato =
            new SimpleDateFormat("dd/MM/yyyy  HH:mm:ss");

    public RelogioSwing() {

        setTitle("Relógio Swing");
        setSize(450, 300);
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setLocationRelativeTo(null);

        // Painel com imagem de fundo
        JPanel painel = new JPanel() {
            Image imagem = new ImageIcon("fundo.png").getImage();

            @Override
            protected void paintComponent(Graphics g) {
                super.paintComponent(g);
                g.drawImage(imagem, 0, 0, getWidth(), getHeight(), this);
            }
        };

        painel.setLayout(new BorderLayout());

        // Label da data e hora
        labelDataHora = new JLabel();
        labelDataHora.setHorizontalAlignment(SwingConstants.CENTER);
        labelDataHora.setForeground(Color.CYAN); // cor do texto
        labelDataHora.setFont(new Font("Verdana", Font.BOLD, 28));

        painel.add(labelDataHora, BorderLayout.CENTER);

        // Botão
        JButton botao = new JButton("Atualizar Hora");
        botao.setFont(new Font("Arial", Font.BOLD, 14));
        botao.setBackground(Color.BLACK);
        botao.setForeground(Color.WHITE);

        botao.addActionListener(e -> atualizarDataHora());

        painel.add(botao, BorderLayout.SOUTH);

        add(painel);

        // Timer para atualizar automaticamente
        Timer timer = new Timer(1000, e -> atualizarDataHora());
        timer.start();

        atualizarDataHora();
        setVisible(true);
    }

    private void atualizarDataHora() {
        labelDataHora.setText(formato.format(new Date()));
    }

    public static void main(String[] args) {
        new RelogioSwing();
    }
}
